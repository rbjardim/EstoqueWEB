@page
@model EstoqueWEB.Pages.AdminUserModel
@{
    ViewData["Title"] = "Administração";
}
<div class="main-content">
    <!DOCTYPE html>
    <html lang="pt-BR">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"] - Administração</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <style>
            body {
                background-color: #e7ecef;
                font-family: Arial, sans-serif;
                margin: 0;
            }

            .titulo {
                text-align: center;
                color: black;
                margin-bottom: 20px;
            }

            .text {
                color: black;
                margin-bottom: 20px;
            }

            .sidebar {
                height: 100%;
                width: 250px;
                position: fixed;
                top: 0;
                left: 0;
                background-color: #343a40;
                padding-top: 20px;
                color: white;
                z-index: 100;
            }

                .sidebar a {
                    padding: 10px 15px;
                    text-decoration: none;
                    color: white;
                    display: block;
                    border-radius: 5px;
                    transition: background-color 0.3s ease;
                }

                    .sidebar a:hover {
                        background-color: #495057;
                    }

            .main-content {
                margin-left: 260px;
                padding: 20px;
            }

            .header {
                background-color: #343a40;
                color: white;
                padding: 10px 20px;
                position: fixed;
                top: 0;
                left: 250px;
                width: calc(100% - 250px);
                z-index: 101;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

                .header .logout-button {
                    background-color: #dc3545;
                    border: none;
                    border-radius: 5px;
                    color: white;
                    padding: 10px 20px;
                    cursor: pointer;
                }

                    .header .logout-button:hover {
                        background-color: #bb2d3b;
                    }

            .box-floating {
                background-color: white;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                padding: 20px;
                margin-top: 20px;
                position: relative;
                z-index: 101;
            }

            .table-responsive {
                margin-top: 0;
            }

            .table th, .table td {
                padding: 15px;
                text-align: center;
                vertical-align: middle;
            }

            .table th {
                background-color: #343a40;
                color: white;
            }

            .table tbody tr:nth-of-type(odd) {
                background-color: #f9f9f9;
            }

            .table tbody tr:hover {
                background-color: #e9ecef;
            }

            .action-cell {
                white-space: nowrap;
            }

                .action-cell .btn {
                    margin: 0 5px;
                }

            .btn-custom2 {
                display: inline-block;
                background-color: #0096c7;
                color: #ffffff;
                padding: 14px 28px;
                border-radius: 8px;
                text-decoration: none;
                font-size: 1.1rem;
                margin: 5px;
                transition: background-color 0.3s ease, transform 0.3s ease;
            }

                .btn-custom2:hover {
                    background-color: #0077b6;
                    transform: translateY(-3px);
                }

                .btn-custom2:active {
                    transform: translateY(1px);
                }

                .btn-custom2:focus {
                    outline: none;
                }

                .btn-custom2:focus, .btn-custom2:hover {
                    box-shadow: 0 0 0 3px rgba(0, 119, 181, 0.4);
                }

            .btn-custom {
                display: inline-block;
                background-color: dimgrey;
                color: #ffffff;
                padding: 14px 28px;
                border-radius: 8px;
                text-decoration: none;
                font-size: 1.1rem;
                margin: 5px;
                transition: background-color 0.3s ease, transform 0.3s ease;
            }

                .btn-custom:hover {
                    background-color: #6c757d;
                    transform: translateY(-3px);
                }

                .btn-custom:active {
                    transform: translateY(1px);
                }

                .btn-custom:focus {
                    outline: none;
                }

                .btn-custom:focus, .btn-custom:hover {
                    box-shadow: 0 0 0 3px rgba(0, 119, 181, 0.4);
                }

            .btn-custom3 {
                display: inline-block;
                background-color: #dc3545;
                color: #ffffff;
                padding: 14px 28px;
                border-radius: 8px;
                text-decoration: none;
                font-size: 1.1rem;
                margin: 5px;
                transition: background-color 0.3s ease, transform 0.3s ease;
            }

                .btn-custom3:hover {
                    background-color: #c82333;
                    transform: translateY(-3px);
                }

                .btn-custom3:active {
                    transform: translateY(1px);
                }

                .btn-custom3:focus {
                    outline: none;
                }

                .btn-custom3:focus, .btn-custom3:hover {
                    box-shadow: 0 0 0 3px rgba(0, 119, 181, 0.4);
                }
        </style>
    </head>
    @if (TempData["Admin2Message"] != null)
    {
        <div id="message" class="alert alert-success">
            @TempData["Admin2Message"]
        </div>
    }
    @if (TempData["Admin2Error"] != null)
    {
        <div id="error" class="alert alert-danger">
            @TempData["Admin2Error"]
        </div>
    }
    @if (TempData["Admin2Messages"] != null)
    {
        <div id="message" class="@TempData["Admin2MessageClass"]">
            @TempData["Admin2Messages"]
        </div>
    }

    <body>

        <h2 class="titulo">Gerenciar Usuários</h2>
        <div class="box-floating">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Administrador</th>
                            <th class="text-center action-cell">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Nome</td>
                                <td>@user.Email</td>
                                <td>@(user.IsAdmin ? "Sim" : "Não")</td>
                                <td class="action-cell">
                                    <form method="post" asp-page-handler="DeleteUser" asp-route-id="@user.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-custom2">Excluir</button>
                                    </form>
                                    <form method="post" asp-page-handler="PromoteUser" asp-route-userId="@user.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-custom" @(user.IsAdmin ? "disabled" : "")>Promover a Admin</button>
                                    </form>
                                    <form method="post" asp-page-handler="DemoteUser" asp-route-userId="@user.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-custom3" @(user.IsAdmin ? "" : "disabled")>Rebaixar</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>
</div>
