@using EstoqueWEB.Model
@using Microsoft.AspNetCore.Identity
@inject UserManager<AplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EstoqueWEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #e7ecef;
            font-family: Arial, sans-serif;
        }

        .navbar-custom {
            background-color: #0096c7;
            padding: 10px 20px;
        }

            .navbar-custom .navbar-brand {
                color: white;
                font-size: 1.5rem;
                font-weight: bold;
            }

            .navbar-custom .navbar-nav .nav-link {
                color: white;
                margin-right: 5px;
            }

        .search-bar {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 20px;
        }

        .search-input {
            width: 80%;
            padding: 10px;
            border: 1px solid #e7ecef;
            border-radius: 4px;
        }

        .search-button {
            padding: 10px 20px;
            margin-left: 10px;
            background-color: #0096c7;
            border: none;
            color: white;
            border-radius: 4px;
            cursor: pointer;
        }

            .search-button:hover {
                background-color: #007bb5;
            }

        .footer {
            background-color: #0096c7;
            padding: 20px 0;
            text-align: center;
            color: white;
        }

            .footer a {
                color: white;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

        .linkedin-button {
            background-color: #0077b5;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            margin-left: 5px;
        }

            .linkedin-button:hover {
                background-color: #005582;
            }

        .github-button {
            background-color: #333;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            margin-left: 5px;
        }

            .github-button:hover {
                background-color: #24292e;
            }

        .logout-button {
            background-color: #dc3545;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            margin-left: 10px;
        }

            .logout-button:hover {
                background-color: #bb2d3b;
                ;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom border-bottom box-shadow mb-3">
            <div class="container">
                @if (User.Identity.IsAuthenticated)
                {
                    var user = await UserManager.GetUserAsync(User);
                    if (user != null && await UserManager.IsInRoleAsync(user, "Admin"))
                    {
                        <a class="navbar-brand" asp-area="" asp-page="/Admin">
                            <img src="~/images/logo.png" alt="Logo" style="height: 30px;" />
                        </a>
                    }
                    else
                    {
                        <a class="navbar-brand" asp-area="" asp-page="/Local">
                            <img src="~/images/logo.png" alt="Logo" style="height: 30px;" />
                        </a>
                    }
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-page="/Index">
                        <img src="~/images/logo.png" alt="Logo" style="height: 30px;" />
                    </a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/About">Sobre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white social-button linkedin-button" href="https://www.linkedin.com/in/ruan-bueno-jardim/" target="_blank">LinkedIn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white social-button github-button" href="https://github.com/rbjardim" target="_blank">GitHub</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-page="/Devolucao">Devolução</a>
                            </li>
                        }
                    </ul>
                    <div class="btn-group-custom">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form method="post" asp-area="" asp-page="/Logout">
                                <button type="submit" class="btn logout-button">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a asp-page="/Login" class="btn btn-primary">Login</a>
                            <a asp-page="/Register" class="btn btn-secondary">Registrar</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - EstoqueWEB - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
