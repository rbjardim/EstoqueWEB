@page
@model EstoqueWEB.Pages.LocalModel
@{
    ViewData["Title"] = "Gerenciador de Estoque";
}

<style>
    .titulo {
        text-align: center;
    }

    .btn-salvar {
        background-color: #28a745;
        border-color: #28a745;
        color: white;
        border: none;
    }

        .btn-salvar:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .form-control {
        background-color: #f0f0f0;
    }
</style>

<h2 class="titulo">Gerenciar Estoque</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div class="row">
    <div class="col-md-6">
        <h4>Adicionar novo Equipamento</h4>
        <form method="post" asp-page-handler="Post" class="form">
            <div class="form-group">
                <label asp-for="Estoque.Chamado"></label>
                <input asp-for="Estoque.Chamado" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Estoque.Nome"></label>
                <input asp-for="Estoque.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Estoque.Cargo"></label>
                <input asp-for="Estoque.Cargo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Estoque.Patrimonio"></label>
                <input asp-for="Estoque.Patrimonio" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Estoque.Modelo"></label>
                <input asp-for="Estoque.Modelo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Estoque.RQ"></label>
                <input asp-for="Estoque.RQ" class="form-control" />
                <p></p></>
            </div>
            <button type="submit" class="btn btn-salvar">Salvar</button>
        </form>
    </div>
</div>

<hr />

<div>
    <h4>Itens de Estoque Existentes</h4>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Chamado</th>
                <th>Nome</th>
                <th>Cargo</th>
                <th>Patrimônio</th>
                <th>Modelo</th>
                <th>RQ</th>
                <th>Status</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var estoque in Model.ItensDeEstoque)
            {
                <tr>
                    <td>@estoque.Id</td>
                    <td>@estoque.Chamado</td>
                    <td>@estoque.Nome</td>
                    <td>@estoque.Cargo</td>
                    <td>@estoque.Patrimonio</td>
                    <td>@estoque.Modelo</td>
                    <td>@estoque.RQ</td>
                    <td>
                        <form method="post" asp-page-handler="UpdateStatus" asp-route-id="@estoque.Id">
                            <select name="status" class="form-control">
                                @{
                                    var configurandoSelected = estoque.Status == "configurando" ? "selected" : "";
                                    var aguardandoSelected = estoque.Status == "aguardando" ? "selected" : "";
                                    var entregueSelected = estoque.Status == "entregue" ? "selected" : "";
                                }
                                <option value="configurando" selected="@configurandoSelected">Configurando</option>
                                <option value="aguardando" selected="@aguardandoSelected">Aguardando retirada</option>
                                <option value="entregue" selected="@entregueSelected">Entregue</option>
                            </select>

                            <button type="submit" class="btn btn-primary">Atualizar</button>
                        </form>
                    </td>
                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@estoque.Id" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Excluir</button>
                        </form>
                        <form method="post" asp-page-handler="Export" asp-route-id="@estoque.Id" style="display:inline;">
                            <button type="submit" class="btn btn-success">Exportar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
