@page
@model EstoqueWEB.Pages.LogoutModel
@{
    ViewData["Title"] = "Logout";
}
<style>
    .logout-container {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        padding: 50px;
        max-width: 600px;
        width: 90%;
        margin: 100px auto;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-align: center;
    }

        .logout-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
        }

        .logout-container p {
            font-style: italic;
            color: #555;
            margin-bottom: 30px;
            font-size: 1.2rem;
        }

    .btn-custom {
        display: inline-block;
        background-color: #0096c7;
        color: #ffffff;
        padding: 14px 28px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 1.1rem;
        margin: 5px;
        transition: background-color 0.3s ease, transform 0.3s ease;
        border: none;
        box-shadow: none;
    }

        .btn-custom:hover {
            background-color: #0077b6;
            color: #ffffff;
            transform: translateY(-3px);
        }

        .btn-custom:active {
            transform: translateY(1px);
        }

        .btn-custom:focus {
            outline: none;
        }

        .btn-custom:focus, .btn-custom:hover {
            box-shadow: 0 0 0 3px rgba(0, 119, 181, 0.4);
        }

    .btn-danger-custom {
        background-color: #dc3545;
        color: #ffffff;
        padding: 14px 28px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 1.1rem;
        margin: 5px;
        transition: background-color 0.3s ease, transform 0.3s ease;
        border: none;
        box-shadow: none;
    }

        .btn-danger-custom:hover {
            background-color: #c82333;
            color: #ffffff;
            transform: translateY(-3px);
        }

        .btn-danger-custom:active {
            transform: translateY(1px);
        }

        .btn-danger-custom:focus {
            outline: none;
        }

        .btn-danger-custom:focus, .btn-danger-custom:hover {
            box-shadow: 0 0 0 3px rgba(255, 77, 77, 0.4);
        }
</style>
<form method="post">
    <div class="logout-container mt-5">
        <div class="row justify-content-center">
            <div class="col-12">
                <p>Tem certeza que deseja sair?</p>
                <div class="d-flex justify-content-center">
                    <button class="btn-custom" type="submit" asp-page-handler="Logout">SIM</button>
                    <button class="btn-danger-custom" type="submit" asp-page-handler="DontLogout">NÃO</button>
                </div>
            </div>
        </div>
    </div>
</form>
