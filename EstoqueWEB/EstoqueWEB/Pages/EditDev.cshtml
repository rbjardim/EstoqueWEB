@page
@model EstoqueWEB.Pages.EditDevModel
@{
    ViewData["Title"] = "Editar Devolução";
}

<h2>Editar Devolução</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Devolucao.Id" />

    <div class="form-group">
        <label asp-for="Devolucao.Chamado"></label>
        <input asp-for="Devolucao.Chamado" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Devolucao.Nome"></label>
        <input asp-for="Devolucao.Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Devolucao.Data"></label>
        <input asp-for="Devolucao.Data" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Devolucao.Patrimonio"></label>
        <input asp-for="Devolucao.Patrimonio" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Devolucao.Modelo"></label>
        <input asp-for="Devolucao.Modelo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Devolucao.ChamadoArmazenagem"></label>
        <input asp-for="Devolucao.ChamadoArmazenagem" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-page="/Devolucao/Index" class="btn btn-secondary">Cancelar</a>
</form>