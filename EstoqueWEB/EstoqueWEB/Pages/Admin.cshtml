@page
@model EstoqueWEB.Pages.AdminModel
@{
    ViewData["Title"] = "Administração";
}

<style>
    .titulo {
        text-align: center;
        color: #0096c7;
        margin-bottom: 20px;
    }

    .logout-button {
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        margin-left: 10px;
    }

        .logout-button:hover {
            background-color: #bb2d3b;
        }

    .sim-button {
        background-color: #57cc99;
        border-color: #57cc99;
        color: white;
    }

        .sim-button:hover {
            background-color: #45a379;
            border-color: #45a379;
        }

    .nao-button {
        background-color: #dc3545;
        color: white;
    }

        .nao-button:hover {
            background-color: #bb2d3b;
        }


    .button-group {
        display: flex;
        justify-content: flex-start;
        align-items: center;
    }

        .button-group .btn {
            margin-left: 5px;
        }

    .linha-branca {
        background-color: white;
    }

    .linha-cinza {
        background-color: #212529;
    }

    .toggle-btn {
        background-color: #343a40;
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        margin-left: 10px;
        transition: background-color 0.3s ease;
    }

        .toggle-btn:hover {
            background-color: #5a6268;
        }

    .alert-danger {
        color: #dc3545;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }


    .table {
        width: 95%;
        table-layout: fixed;
    }

        .table th,
        .table td {
            padding: 10px;
            text-align: center;
            vertical-align: middle;
            border-top: 1px solid #e9ecef;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            border-bottom: 1px solid black;
        }

        .table th {
            background-color: #0096c7;
            color: white;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2;
    }


    .action-cell {
        white-space: nowrap;
        display: flex;
        justify-content: flex-end;
        align-items: end;
    }
</style>

<div class="container">
    <h2 class="titulo">Administração de Usuários e Itens</h2>

    <div id="message-container">
        @if (TempData["Message"] != null)
        {
            <div id="message" class="alert alert-success">@TempData["Message"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div id="message" class="alert alert-danger">@TempData["Error"]</div>
        }
    </div>

    <div class="row">
        <div class="col-md-12">
            <h3 class="titulo">Usuários</h3>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th class="text-center action-cell">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Nome</td>
                                <td>@user.Email</td>
                                <td class="text-center action-cell">
                                    <form method="post" asp-page-handler="DeleteUser" asp-route-id="@user.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-danger">Excluir</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h3 class="titulo">Itens de Estoque</h3>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Chamado</th>
                            <th>Nome</th>
                            <th>Patrimônio</th>
                            <th>Status</th>
                            <th class="text-center action-cell">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ItensDeEstoque)
                        {
                            <tr>
                                <td>@item.Chamado</td>
                                <td>@item.Nome</td>
                                <td>@item.Patrimonio</td>
                                <td>@item.Status</td>
                                <td class="text-center action-cell">
                                    <form method="post" asp-page-handler="DeleteItem" asp-route-id="@item.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-danger">Excluir</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h3 class="titulo">Itens de Devolução</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Chamado</th>
                        <th>Nome</th>
                        <th>Patrimônio</th>
                        <th>Status</th>
                        <th class="text-center action-cell">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItensDeDevolucao)
                    {
                        <tr>
                            <td>@item.Chamado</td>
                            <td>@item.Nome</td>
                            <td>@item.Patrimonio</td>
                            <td>@item.Status</td>
                            <td class="text-center action-cell">
                                <form method="post" asp-page-handler="DeleteItem" asp-route-id="@item.Id" style="display:inline;">
                                    <button type="submit" class="btn btn-danger">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $("#message").fadeOut("slow");
            }, 3000);
        });
    </script>
}
