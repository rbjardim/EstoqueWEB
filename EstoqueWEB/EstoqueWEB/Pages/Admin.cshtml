@page
@model EstoqueWEB.Pages.AdminModel
@{
    ViewData["Title"] = "Administração";
}

<style>
    .titulo {
        text-align: center;
        margin-bottom: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 8px 16px;
        width: 100%; 
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .table {
        width: 100%;
        margin-bottom: 40px;
    }

        .table th,
        .table td {
            vertical-align: middle;
        }

    .alert {
        margin-bottom: 20px;
    }

  
    .table th.text-center,
    .table td.text-center {
        text-align: center;
    }

 
    .table .action-cell {
        width: 150px;
        white-space: nowrap;
    }
</style>

<div class="container">
    <h2 class="titulo">Administração de Usuários e Itens</h2>

    <div id="message-container">
        @if (TempData["Message"] != null)
        {
            <div id="message" class="alert alert-success">@TempData["Message"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div id="message" class="alert alert-danger">@TempData["Error"]</div>
        }
    </div>

    <div class="row">
        <div class="col-md-12">
            <h3>Usuários</h3>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th class="text-center action-cell">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Nome</td>
                                <td>@user.Email</td>
                                <td class="text-center action-cell">
                                    <form method="post" asp-page-handler="DeleteUser" asp-route-id="@user.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-danger">Excluir</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h3>Itens de Estoque</h3>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Chamado</th>
                            <th>Nome</th>
                            <th>Patrimônio</th>
                            <th>Status</th>
                            <th class="text-center action-cell">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ItensDeEstoque)
                        {
                            <tr>
                                <td>@item.Chamado</td>
                                <td>@item.Nome</td>
                                <td>@item.Patrimonio</td>
                                <td>@item.Status</td>
                                <td class="text-center action-cell">
                                    <form method="post" asp-page-handler="DeleteItem" asp-route-id="@item.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-danger">Excluir</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <h3>Itens de Devolução</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Chamado</th>
                        <th>Nome</th>
                        <th>Patrimônio</th>
                        <th>Status</th>
                        <th class="text-center action-cell">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItensDeDevolucao)
                    {
                        <tr>
                            <td>@item.Chamado</td>
                            <td>@item.Nome</td>
                            <td>@item.Patrimonio</td>
                            <td>@item.Status</td>
                            <td class="text-center action-cell">
                                <form method="post" asp-page-handler="DeleteItem" asp-route-id="@item.Id" style="display:inline;">
                                    <button type="submit" class="btn btn-danger">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $("#message").fadeOut("slow");
            }, 3000);
        });
    </script>
}
