@page
@model EstoqueWEB.Pages.AdminModel
@{
    ViewData["Title"] = "Administração";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Administração</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            padding-top: 20px;
            color: white;
            z-index: 100;
        }

            .sidebar a {
                padding: 10px 15px;
                text-decoration: none;
                color: white;
                display: block;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .main-content {
            margin-left: 260px;
            padding: 20px;
        }

        .header {
            background-color: #343a40;
            color: white;
            padding: 10px 20px;
            position: fixed;
            top: 0;
            left: 250px;
            width: calc(100% - 250px);
            z-index: 101;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .header .logout-button {
                background-color: #dc3545;
                border: none;
                border-radius: 5px;
                color: white;
                padding: 10px 20px;
                cursor: pointer;
            }

                .header .logout-button:hover {
                    background-color: #bb2d3b;
                }

        .dashboard-cards {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .dashboard-card {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            flex: 1;
            margin: 0 10px;
            text-align: center;
        }

            .dashboard-card h4 {
                margin: 0;
                font-size: 1.5rem;
                color: #0096c7;
            }

            .dashboard-card p {
                margin: 10px 0;
                font-size: 1.2rem;
                color: #555;
            }

        .table-responsive {
            margin-top: 20px;
        }

        .table th, .table td {
            padding: 15px;
            text-align: center;
            vertical-align: middle;
        }

        .table th {
            background-color: #0096c7;
            color: white;
        }

        .table tbody tr:nth-of-type(odd) {
            background-color: #f9f9f9;
        }

        .table tbody tr:hover {
            background-color: #e9ecef;
        }

        .action-cell {
            white-space: nowrap;
        }

            .action-cell .btn {
                margin: 0 5px;
            }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4 class="text-center">Administração</h4>
        <a href="/admin">Painel</a>
        <a href="/Local">Estoque</a>
        <a href="/Devolucao">Devolução</a>
        <a href="/Celular">Celulares</a>
    </div>

    <div class="header">
        <span class="h4">Bem-vindo ao Painel de Administração</span>
        <button class="btn btn-danger logout-button" onclick="window.location.href='/logout'">Logout</button>
    </div>

    <div class="main-content">
        <div class="dashboard-cards">
            <div class="dashboard-card">
                <h4>Usuários</h4>
                <p>@Model.TotalUsuarios</p>
            </div>
            <div class="dashboard-card">
                <h4>Estoque</h4>
                <p>@Model.TotalItensEstoque</p>
            </div>
            <div class="dashboard-card">
                <h4>Devolução</h4>
                <p>@Model.TotalItensDevolucao</p>
            </div>
            <div class="dashboard-card">
                <h4>Celular</h4>
                <p>@Model.TotalItensCelular</p>
            </div>
        </div>

        <h3>Usuários</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th class="text-center action-cell">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Nome</td>
                            <td>@user.Email</td>
                            <td class="action-cell">
                                <form method="post" asp-page-handler="DeleteUser" asp-route-id="@user.Id" style="display:inline;">
                                    <button type="submit" class="btn btn-danger">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <h3>Itens de Estoque</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Chamado</th>
                        <th>Nome</th>
                        <th>Patrimônio</th>
                        <th>Status</th>
                        <th class="text-center action-cell">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItensDeEstoque)
                    {
                        <tr>
                            <td>@item.Chamado</td>
                            <td>@item.Nome</td>
                            <td>@item.Patrimonio</td>
                            <td>@item.Status</td>
                            <td class="action-cell">
                                <form method="post" asp-page-handler="DeleteItem" asp-route-id="@item.Id" style="display:inline;">
                                    <button type="submit" class="btn btn-danger">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <h3>Itens de Devolução</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Chamado</th>
                        <th>Nome</th>
                        <th>Patrimônio</th>
                        <th>Status</th>
                        <th class="text-center action-cell">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItensDeDevolucao)
                    {
                        <tr>
                            <td>@item.Chamado</td>
                            <td>@item.Nome</td>
                            <td>@item.Patrimonio</td>
                            <td>@item.Status</td>
                            <td class="action-cell">
                                <form method="post" asp-page-handler="DeleteItem" asp-route-id="@item.Id" style="display:inline;">
                                    <button type="submit" class="btn btn-danger">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $("#message").fadeOut("slow");
            }, 3000);
        });
    </script>
</body>
</html>
