@page
@model EstoqueWEB.Pages.ContactModel
@{
    ViewData["Title"] = "Contato";
}

<style>
    .header {
        text-align: center;
        margin-bottom: 40px;
    }

        .header h1 {
            color: #0096c7;
            margin: 0;
        }

        .header p {
            font-size: 18px;
            color: #666;
        }

    .section {
        margin-bottom: 30px;
        padding: 20px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .section h3 {
            color: #0096c7;
            border-bottom: 2px solid #0096c7;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .section p {
            font-size: 16px;
            color: #555;
            margin-bottom: 10px;
        }

    .card {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 20px;
        padding: 15px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

        .card img {
            width: 100px;
            height: 100px;
            margin-bottom: 10px;
        }

        .card h4 {
            margin: 0;
            color: #333;
        }

        .card p {
            margin: 5px 0;
            color: #666;
        }

    .btn-back {
        display: inline-block;
        background-color: #0096c7;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        margin-top: 20px;
        text-align: center;
    }

        .btn-back:hover {
            background-color: #007bb5;
        }

</style>

<div class="container">
    <div class="header">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="section">
        <h3>Meus Perfis</h3>
        <div class="card">
            <img src="https://cdn-icons-png.flaticon.com/512/179/179330.png" alt="LinkedIn Icon" />
            <h4>LinkedIn</h4>
            <p><a href="https://www.linkedin.com/in/ruan-bueno-jardim/" target="_blank">Visite meu LinkedIn</a></p>
        </div>
        <div class="card">
            <img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png" alt="GitHub Icon" />
            <h4>GitHub</h4>
            <p><a href="https://github.com/rbjardim" target="_blank">Visite meu GitHub</a></p>
        </div>
    </div>
</div>
<a href="/" class="btn-back">Voltar para a Página Principal</a>

